<%= form_for(@game, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :script, "Your Code", :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :script, :cols => 80, :rows => 30 %>
      <div id='pretty_editor'><%= @game.script %></div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, "Name of Your Game", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :author, "Who are You?", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :author %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Bake Pie', :class=>"btn btn-primary" %>
  </div>
<% end %>
